<Window x:Class="grzyClothTool.Controls.CustomMessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:grzyClothTool.Controls"
        mc:Ignorable="d"
        AllowsTransparency="True"
        WindowStyle="None"
        MinHeight="180"
        MinWidth="400"
        Background="Transparent"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Title="CustomMessageBox" Height="450" Width="800">
    <Border Margin="8" Background="{DynamicResource Brush50}" BorderBrush="{DynamicResource Brush300}" BorderThickness="1" CornerRadius="4">
        <Border.Effect>
            <DropShadowEffect BlurRadius="16" 
                              ShadowDepth="4"
                              Direction="270" 
                              Color="Black" 
                              Opacity="0.4"
                              RenderingBias="Performance"/>
        </Border.Effect>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="52"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border x:Name="CMBCaptionBorder"
                    Grid.ColumnSpan="2" 
                    Grid.Row="0" 
                    Background="{DynamicResource Brush100}"
                    BorderBrush="{DynamicResource Brush300}"
                    BorderThickness="0,0,0,1"
                    CornerRadius="4,4,0,0"
                    MouseLeftButtonDown="OnCaptionPress">
                <TextBlock x:Name="CMBCaption" 
                           Text="Custom Message Box Caption"
                           Foreground="{DynamicResource Brush950}"
                           FontWeight="SemiBold"
                           FontSize="14"
                           VerticalAlignment="Center"
                           Padding="16,0,16,0" />
            </Border>

            <!-- Icon for our custom message box -->
            <Image x:Name="CMBIcon" 
                   Grid.Column="0" 
                   Grid.Row="1" 
                   HorizontalAlignment="Left" 
                   VerticalAlignment="Top"
                   Width="24" 
                   Height="24"
                   Margin="16,20,0,0"/>

            <!-- Message content -->
            <StackPanel Grid.Column="1" 
                        Grid.Row="1" 
                        Margin="12,20,16,20">
                <TextBlock x:Name="CMBMessage" 
                           TextWrapping="Wrap"
                           Foreground="{DynamicResource Brush900}"
                           FontSize="13"
                           LineHeight="20"
                           Text="Custom Message Box Message"/>
                <TextBox x:Name="CMBTextBox"
                         Style="{StaticResource ModernTextBox}"
                         Margin="0,12,0,0"
                         Padding="8,6"
                         FontSize="13"
                         Visibility="Collapsed" />
            </StackPanel>

            <!-- Button area -->
            <Border Grid.Row="2" 
                    Grid.ColumnSpan="2" 
                    Background="{DynamicResource Brush100}"
                    BorderBrush="{DynamicResource Brush300}"
                    BorderThickness="0,1,0,0"
                    CornerRadius="0,0,4,4">
                <StackPanel x:Name="CMBButtons"                    
                            Orientation="Horizontal"
                            FlowDirection="RightToLeft" 
                            HorizontalAlignment="Right" 
                            VerticalAlignment="Center" 
                            Margin="16,0,16,0"/>
            </Border>
        </Grid>
    </Border>
</Window>
