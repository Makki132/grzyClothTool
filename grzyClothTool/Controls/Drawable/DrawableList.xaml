<UserControl x:Class="grzyClothTool.Controls.DrawableList"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:icons="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
             xmlns:models="clr-namespace:grzyClothTool.Models"
             xmlns:helpers="clr-namespace:grzyClothTool.Helpers"
             d:DataContext="{d:DesignInstance Type=models:AddonManagerDesign, IsDesignTimeCreatable=True}"
             x:Name="MyDrawableList"
             mc:Ignorable="d">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary>
                    <local:GenderCountConverter x:Key="GenderCountConverter" xmlns:local="clr-namespace:grzyClothTool.Converters" />
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
            
            <!-- CollectionViewSource for grouping and sorting -->
            <CollectionViewSource x:Key="GroupedDrawables" Source="{Binding ItemsSource, ElementName=MyDrawableList}">
                <CollectionViewSource.GroupDescriptions>
                    <PropertyGroupDescription PropertyName="TypeName" />
                </CollectionViewSource.GroupDescriptions>
                <CollectionViewSource.SortDescriptions>
                    <!-- Sort by Sex in ascending order (Female=0 first, then Male=1), then by Number ascending -->
                    <scm:SortDescription PropertyName="Sex" Direction="Ascending" xmlns:scm="clr-namespace:System.ComponentModel;assembly=WindowsBase" />
                    <scm:SortDescription PropertyName="Number" Direction="Ascending" xmlns:scm="clr-namespace:System.ComponentModel;assembly=WindowsBase" />
                </CollectionViewSource.SortDescriptions>
            </CollectionViewSource>
        <ContextMenu x:Key="SingleSelectionContextMenu">
            <MenuItem IsEnabled="False" Header="Optimize embedded textures" Click="OptimizeTexture_Click" />
            <MenuItem Header="Delete" Click="DeleteDrawable_Click" />
            <MenuItem Header="Replace" Click="ReplaceDrawable_Click" />
            <MenuItem Header="Move" ItemsSource="{Binding AddonManager.MoveMenuItems, RelativeSource={RelativeSource AncestorType=Window}}">
                <MenuItem.ItemContainerStyle>
                    <Style TargetType="MenuItem">
                        <Setter Property="Header" Value="{Binding Header}" />
                        <Setter Property="IsEnabled" Value="{Binding IsEnabled}" />
                        <EventSetter Event="Click" Handler="MoveMenuItem_Click" />
                    </Style>
                </MenuItem.ItemContainerStyle>
            </MenuItem>
            <MenuItem Header="Open file location" Click="OpenFileLocation_Click" />
            <MenuItem Header="Export as YDD" Click="ExportDrawable_Click" />
            <MenuItem Header="Export as YDD with textures" Click="ExportDrawable_Click" Tag="YTD" />
            <MenuItem Header="Export only textures as DDS" Click="ExportDrawable_Click" Tag="DDS" />
            <MenuItem Header="Export only textures as PNG" Click="ExportDrawable_Click" Tag="PNG" />
        </ContextMenu>
        <ContextMenu x:Key="MultipleSelectionContextMenu">
            <MenuItem Header="Delete" Click="DeleteDrawable_Click" />
            <MenuItem Header="Move" ItemsSource="{Binding AddonManager.MoveMenuItems, RelativeSource={RelativeSource AncestorType=Window}}">
                <MenuItem.ItemContainerStyle>
                    <Style TargetType="MenuItem">
                        <Setter Property="Header" Value="{Binding Header}" />
                        <Setter Property="IsEnabled" Value="{Binding IsEnabled}" />
                        <EventSetter Event="Click" Handler="MoveMenuItem_Click" />
                    </Style>
                </MenuItem.ItemContainerStyle>
            </MenuItem>
            <MenuItem Header="Export as YDD" Click="ExportDrawable_Click" />
            <MenuItem Header="Export as YDD with textures" Click="ExportDrawable_Click" Tag="YTD" />
            <MenuItem Header="Export only textures as DDS" Click="ExportDrawable_Click" Tag="DDS" />
            <MenuItem Header="Export only textures as PNG" Click="ExportDrawable_Click" Tag="PNG" />
        </ContextMenu>

        <Style TargetType="ListBox" x:Key="ListBoxStyleWithContextMenu">
            <Style.Triggers>
                <DataTrigger Binding="{Binding DataContext.IsMultipleDrawablesSelected, ElementName=MyDrawableList}" Value="True">
                    <Setter Property="ContextMenu" Value="{StaticResource MultipleSelectionContextMenu}" />
                </DataTrigger>
                <DataTrigger Binding="{Binding DataContext.IsMultipleDrawablesSelected, ElementName=MyDrawableList}" Value="False">
                    <Setter Property="ContextMenu" Value="{StaticResource SingleSelectionContextMenu}" />
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="ListBoxItem" x:Key="ListBoxItemTemplate">
            <Setter Property="AllowDrop" Value="True" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border Background="Transparent" x:Name="Border" BorderBrush="{DynamicResource Brush600}" BorderThickness="1" Padding="0, 5, 0, 5" Margin="0,2,2,2" CornerRadius="5">
                            <Grid >
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="4"/>
                                    <ColumnDefinition Width="150"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Rectangle Width="4" Margin="-5" Grid.Column="0">
                                    <Rectangle.Clip>
                                        <RectangleGeometry Rect="0,0,100,26"  RadiusX="4.5" RadiusY="4.5"/>
                                    </Rectangle.Clip>
                                    <Rectangle.Style>
                                        <Style TargetType="Rectangle">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding SexName}" Value="male">
                                                    <Setter Property="Fill" Value="#94c1ff"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding SexName}" Value="female">
                                                    <Setter Property="Fill" Value="#ffa3c3"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Rectangle.Style>
                                </Rectangle>
                                <StackPanel Grid.Column="1" Orientation="Horizontal">
                                    <icons:MaterialIcon Kind="ProgressHelper" Height="12" Margin="5,1,0,0">
                                        <icons:MaterialIcon.Style>
                                            <Style TargetType="{x:Type icons:MaterialIcon}" BasedOn="{StaticResource Spin}">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsLoading}" Value="True">
                                                        <Setter Property="Visibility" Value="Visible" />
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding IsLoading}" Value="False">
                                                        <Setter Property="Visibility" Value="Collapsed" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </icons:MaterialIcon.Style>
                                    </icons:MaterialIcon>
                                    <ContentControl ToolTip="{Binding Details.Tooltip}" ToolTipService.InitialShowDelay="0">
                                        <icons:MaterialIcon Kind="AlertCircleOutline" Width="12" Margin="5,1,0,0">
                                            <icons:MaterialIcon.Style>
                                                <Style TargetType="{x:Type icons:MaterialIcon}">
                                                    <Setter Property="Visibility" Value="Collapsed" />
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Details.IsWarning}" Value="True">
                                                            <Setter Property="Visibility" Value="Visible" />
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </icons:MaterialIcon.Style>
                                        </icons:MaterialIcon>
                                    </ContentControl>
                                    <TextBlock Padding="5, 0, 0, 0" Foreground="{DynamicResource Brush950}" Text="{Binding FormattedDisplayName, UpdateSourceTrigger=PropertyChanged}"></TextBlock>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Grid.Column="2" HorizontalAlignment="Right">
                                    <Rectangle x:Name="ReservedDot" Width="13" Margin="0, 2, 4, 0" HorizontalAlignment="Right" ToolTip="Reserved drawable" ToolTipService.InitialShowDelay="0">
                                        <Rectangle.Clip>
                                            <RectangleGeometry Rect="1,0,12,12"  RadiusX="12" RadiusY="12"/>
                                        </Rectangle.Clip>
                                    </Rectangle>
                                    <Rectangle x:Name="SelectedDot" Width="13" Margin="0, 2, 4, 0" HorizontalAlignment="Right" ToolTip="Currently selected drawable" ToolTipService.InitialShowDelay="0">
                                        <Rectangle.Clip>
                                            <RectangleGeometry Rect="1,0,12,12"  RadiusX="12" RadiusY="12"/>
                                        </Rectangle.Clip>
                                    </Rectangle>
                                </StackPanel>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{DynamicResource Brush200}" TargetName="Border"/>
                            </Trigger>
                            <MultiDataTrigger>
                                <MultiDataTrigger.Conditions>
                                    <Condition Binding="{Binding Path=Instance.MarkNewDrawables, Source={x:Static helpers:SettingsHelper.Instance}}" Value="True"/>
                                    <Condition Binding="{Binding IsNew}" Value="True"/>
                                </MultiDataTrigger.Conditions>

                                <Setter Property="Fill" Value="#F5E025" TargetName="SelectedDot" />
                                <Setter Property="ToolTip" Value="Newly added drawable" TargetName="SelectedDot" />
                            </MultiDataTrigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="FontWeight" Value="Bold" />
                                <Setter Property="Fill" Value="LimeGreen" TargetName="SelectedDot" />
                            </Trigger>
                            <DataTrigger Binding="{Binding IsReserved}" Value="True">
                                <Setter Property="FontStyle" Value="Italic" />
                                <Setter Property="Fill" Value="#FFF58F38" TargetName="ReservedDot" />
                            </DataTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        </ResourceDictionary>
    </UserControl.Resources>

    <AdornerDecorator>
        <ListBox 
            Background="Transparent"
            Foreground="{DynamicResource Brush950}"
            x:Name="MyListBox" 
            SelectionMode="Extended"
            SelectionChanged="ListBox_SelectionChanged"
            HorizontalContentAlignment="Stretch" 
            ItemContainerStyle="{StaticResource ListBoxItemTemplate}" 
            ItemsSource="{Binding Source={StaticResource GroupedDrawables}}"
            d:ItemsSource="{Binding Drawables}"
            BorderThickness="0" 
            d:SelectedIndex="1"
            d:Width="300"
            PreviewKeyDown="DrawableList_PreviewKeyDown"
            Style="{StaticResource ListBoxStyleWithContextMenu}"
            AllowDrop="True"
            PreviewMouseLeftButtonDown="MyListBox_PreviewMouseLeftButtonDown"
            PreviewMouseMove="MyListBox_PreviewMouseMove"
            Drop="MyListBox_Drop"
            DragOver="MyListBox_DragOver"
            ScrollViewer.HorizontalScrollBarVisibility="Disabled"
            ScrollViewer.VerticalScrollBarVisibility="Auto">
            <ListBox.Resources>
                <!-- Hide scrollbar track -->
                <Style TargetType="ScrollBar">
                    <Setter Property="Width" Value="8"/>
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ScrollBar">
                                <Grid>
                                    <Track x:Name="PART_Track" IsDirectionReversed="True">
                                        <Track.Thumb>
                                            <Thumb>
                                                <Thumb.Style>
                                                    <Style TargetType="Thumb">
                                                        <Setter Property="Background" Value="{DynamicResource Brush400}"/>
                                                        <Setter Property="Template">
                                                            <Setter.Value>
                                                                <ControlTemplate TargetType="Thumb">
                                                                    <Border Background="{TemplateBinding Background}" CornerRadius="4" Margin="2,0"/>
                                                                </ControlTemplate>
                                                            </Setter.Value>
                                                        </Setter>
                                                        <Style.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="Background" Value="{DynamicResource Brush500}"/>
                                                            </Trigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Thumb.Style>
                                            </Thumb>
                                        </Track.Thumb>
                                    </Track>
                                </Grid>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </ListBox.Resources>
            <ListBox.GroupStyle>
                <GroupStyle>
                    <GroupStyle.ContainerStyle>
                        <Style TargetType="{x:Type GroupItem}">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type GroupItem}">
                                        <Expander IsExpanded="False" Background="Transparent" BorderThickness="0" Margin="0,2,0,0">
                                            <Expander.Style>
                                                <Style TargetType="Expander">
                                                    <Setter Property="Template">
                                                        <Setter.Value>
                                                            <ControlTemplate TargetType="Expander">
                                                                <DockPanel>
                                                                    <ToggleButton x:Name="ExpanderButton" 
                                                                                  DockPanel.Dock="Top" 
                                                                                  IsChecked="{Binding Path=IsExpanded, RelativeSource={RelativeSource TemplatedParent}}"
                                                                                  Background="{DynamicResource Brush200}"
                                                                                  BorderThickness="0"
                                                                                  Height="32"
                                                                                  HorizontalContentAlignment="Stretch"
                                                                                  Cursor="Hand">
                                                                        <ToggleButton.Style>
                                                                            <Style TargetType="ToggleButton">
                                                                                <Setter Property="Background" Value="{DynamicResource Brush200}"/>
                                                                                <Setter Property="Template">
                                                                                    <Setter.Value>
                                                                                        <ControlTemplate TargetType="ToggleButton">
                                                                                            <Border Background="{TemplateBinding Background}" 
                                                                                                    BorderBrush="{DynamicResource Brush300}" 
                                                                                                    BorderThickness="0,0,0,1"
                                                                                                    CornerRadius="4">
                                                                                                <Grid Height="32">
                                                                                                    <Grid.ColumnDefinitions>
                                                                                                        <ColumnDefinition Width="32"/>
                                                                                                        <ColumnDefinition Width="Auto"/>
                                                                                                        <ColumnDefinition Width="*"/>
                                                                                                        <ColumnDefinition Width="Auto"/>
                                                                                                    </Grid.ColumnDefinitions>
                                                                                                    
                                                                                                    <!-- Modern Arrow Icon -->
                                                                                                    <icons:MaterialIcon x:Name="ExpandIcon" Grid.Column="0" Kind="ChevronRight" 
                                                                                                                        Width="18" Height="18" 
                                                                                                                        Foreground="{DynamicResource Brush700}" 
                                                                                                                        VerticalAlignment="Center" 
                                                                                                                        HorizontalAlignment="Center"
                                                                                                                        RenderTransformOrigin="0.5, 0.5">
                                                                                                        <icons:MaterialIcon.RenderTransform>
                                                                                                            <RotateTransform Angle="0"/>
                                                                                                        </icons:MaterialIcon.RenderTransform>
                                                                                                    </icons:MaterialIcon>
                                                                                                    
                                                                                                    <!-- Category Icon -->
                                                                                                    <icons:MaterialIcon Grid.Column="1" Kind="TshirtCrew" 
                                                                                                                        Width="16" Height="16" 
                                                                                                                        Foreground="{DynamicResource Brush700}" 
                                                                                                                        VerticalAlignment="Center" 
                                                                                                                        Margin="0,0,8,0"/>
                                                                                                    
                                                                                                    <!-- Category Name -->
                                                                                                    <TextBlock Grid.Column="2" 
                                                                                                               Text="{Binding Name}" 
                                                                                                               FontWeight="SemiBold" 
                                                                                                               FontSize="13" 
                                                                                                               Foreground="{DynamicResource Brush950}" 
                                                                                                               VerticalAlignment="Center"/>
                                                                                                    
                                                                                                    <!-- Gender Count Display -->
                                                                                                    <TextBlock Grid.Column="3" 
                                                                                                               Text="{Binding Path=Content.Items, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource GenderCountConverter}}"
                                                                                                               FontSize="11" 
                                                                                                               Foreground="{DynamicResource Brush600}" 
                                                                                                               VerticalAlignment="Center" 
                                                                                                               Margin="0,0,12,0"/>
                                                                                                </Grid>
                                                                                            </Border>
                                                                                            <ControlTemplate.Triggers>
                                                                                                <Trigger Property="IsMouseOver" Value="True">
                                                                                                    <Setter Property="Background" Value="{DynamicResource Brush300}"/>
                                                                                                </Trigger>
                                                                                                <Trigger Property="IsChecked" Value="True">
                                                                                                    <Trigger.EnterActions>
                                                                                                        <BeginStoryboard>
                                                                                                            <Storyboard>
                                                                                                                <DoubleAnimation Storyboard.TargetName="ExpandIcon"
                                                                                                                               Storyboard.TargetProperty="(UIElement.RenderTransform).(RotateTransform.Angle)"
                                                                                                                               To="90" Duration="0:0:0.2"/>
                                                                                                            </Storyboard>
                                                                                                        </BeginStoryboard>
                                                                                                    </Trigger.EnterActions>
                                                                                                    <Trigger.ExitActions>
                                                                                                        <BeginStoryboard>
                                                                                                            <Storyboard>
                                                                                                                <DoubleAnimation Storyboard.TargetName="ExpandIcon"
                                                                                                                               Storyboard.TargetProperty="(UIElement.RenderTransform).(RotateTransform.Angle)"
                                                                                                                               To="0" Duration="0:0:0.2"/>
                                                                                                            </Storyboard>
                                                                                                        </BeginStoryboard>
                                                                                                    </Trigger.ExitActions>
                                                                                                </Trigger>
                                                                                            </ControlTemplate.Triggers>
                                                                                        </ControlTemplate>
                                                                                    </Setter.Value>
                                                                                </Setter>
                                                                            </Style>
                                                                        </ToggleButton.Style>
                                                                    </ToggleButton>
                                                                    <ContentPresenter x:Name="ExpanderContent" 
                                                                                      DockPanel.Dock="Bottom" 
                                                                                      Visibility="Collapsed"
                                                                                      Margin="4,2,0,4"/>
                                                                </DockPanel>
                                                                <ControlTemplate.Triggers>
                                                                    <Trigger Property="IsExpanded" Value="True">
                                                                        <Setter TargetName="ExpanderContent" Property="Visibility" Value="Visible"/>
                                                                    </Trigger>
                                                                </ControlTemplate.Triggers>
                                                            </ControlTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Style>
                                            </Expander.Style>
                                            <ItemsPresenter/>
                                        </Expander>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </GroupStyle.ContainerStyle>
                </GroupStyle>
            </ListBox.GroupStyle>
        </ListBox>
    </AdornerDecorator>
</UserControl>
