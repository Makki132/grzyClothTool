<UserControl x:Class="grzyClothTool.Views.Home"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:grzyClothTool.Views"
             xmlns:c="clr-namespace:grzyClothTool.Controls"

             mc:Ignorable="d" 
             d:Background="white"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>

        <DockPanel Grid.Column="0">
            <c:CustomButton Label="Close" Height="60" DockPanel.Dock="Bottom" Padding="5" CornerRadius="5" MyBtnClickEvent="Close_Click" />
            
            <StackPanel>
                <c:CustomButton Label="Create new project" Height="100" FontSize="20" Padding="5" CornerRadius="5" MyBtnClickEvent="CreateNew_Click" />
                <c:CustomButton Label="Import project" Height="60" Padding="5" CornerRadius="5" MyBtnClickEvent="ImportProject_Click" />
                <c:CustomButton Label="Open addon" Height="60" Padding="5" CornerRadius="5" MyBtnClickEvent="OpenAddon_Click" />
            </StackPanel>
        </DockPanel>

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <GroupBox Style="{StaticResource FixedGroupBox}" Header="Did You Know?" Grid.Row="0" Margin="8">
                <GroupBox.Effect>
                    <DropShadowEffect ShadowDepth="1" BlurRadius="3" Opacity="0.15" />
                </GroupBox.Effect>
                <Border Background="{DynamicResource Brush50}" BorderBrush="{DynamicResource Brush200}" BorderThickness="1" CornerRadius="4" Padding="12">
                    <TextBlock Text="{Binding RandomDidYouKnow}" FontSize="14" FontStyle="Italic" TextWrapping="WrapWithOverflow" Foreground="{DynamicResource Brush900}" />
                </Border>
            </GroupBox>

            <!-- Modernized Changelog Section -->
            <GroupBox Style="{StaticResource FixedGroupBox}" Header="Changelog" Grid.Row="1" Margin="8">
                <GroupBox.Effect>
                    <DropShadowEffect ShadowDepth="1" BlurRadius="3" Opacity="0.15" />
                </GroupBox.Effect>
                <Border Background="{DynamicResource Brush50}" BorderBrush="{DynamicResource Brush200}" BorderThickness="1" CornerRadius="4">
                    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="12">
                        <StackPanel x:Name="ChangelogContent">
                            <!-- Changelog content will be populated in code-behind -->
                        </StackPanel>
                    </ScrollViewer>
                </Border>
            </GroupBox>

        </Grid>
    </Grid>
</UserControl>
